"compilerOptions": {
        "target": "ES6", // Modern JS output
        "module": "commonjs", // Node.js modules
        "strict": true, // Strict type checking
        "esModuleInterop": true, // Fixes your import errors
        "skipLibCheck": true, // Speeds up compilation by skipping lib checks
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist", // Output directory (optional)
        "rootDir": "./src", // Source code root (optional)
        "resolveJsonModule": true // Allows importing JSON files (optional)
    },
    "include": ["src/**/*"], // Files to include
    "exclude": ["node_modules", "dist"] // Files/folders to exclude
}
