{
    "name": "server",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "start:dev": "tsx --watch ./src/server.ts",
        "create:db": "mysql -u root -p < src/database/schema.sql",
        "add:mockdata": "mysql -u root -p < src/database/mockdata.sql",
        "setup:all": "npm run create:db && npm run add:mockdata && npm run start:dev",
                 
        "create:db:test": "mysql -u root -p quicky_test < src/database/schematest.sql",
        "add:mockdata:test": "mysql -u root -p quicky_test < src/database/mockdatatest.sql",
        "setup:all:test": "npm run create:db:test && npm run add:mockdata:test && npm run start:test",
  
        "start:test": "cross-env NODE_ENV=test tsx ./src/server.ts",
        "test:jest": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-validator": "^7.2.1",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.14.1"
    },
    "devDependencies": {
        "@jest/globals": "^30.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.2",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.15.21",
        "@types/supertest": "^6.0.3",
        "cross-env": "^7.0.3",
        "jest": "^30.0.0",
        "supertest": "^7.1.1",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3"
    }
}
